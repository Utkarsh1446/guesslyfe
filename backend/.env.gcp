# GCP Cloud SQL Configuration
# This file is for reference - actual values will be set in Cloud Run environment variables

# Application
NODE_ENV=production
PORT=8080
API_PREFIX=api/v1

# Database (Cloud SQL)
DB_HOST=/cloudsql/guess-fun-2025-v1:us-central1:guessly-db
DB_PORT=5432
DB_USERNAME=guessly_user
DB_PASSWORD=GuesslyUser2025!
DB_DATABASE=guessly
DB_SYNCHRONIZE=false
DB_LOGGING=false

# Redis (Cloud Memorystore)
REDIS_HOST=REDIS_IP_ADDRESS_HERE
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_TO_RANDOM_STRING
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=CHANGE_THIS_IN_PRODUCTION_TO_RANDOM_STRING
JWT_REFRESH_EXPIRATION=30d

# Blockchain (Base Chain)
BLOCKCHAIN_NETWORK=baseSepolia
BLOCKCHAIN_RPC_URL=https://sepolia.base.org
BLOCKCHAIN_CHAIN_ID=84532
BLOCKCHAIN_PROVIDER_PRIVATE_KEY=

# Smart Contract Addresses (Base Sepolia)
CONTRACT_USDC=0x036CbD53842c5426634e7929541eC2318f3dCF7e
CONTRACT_FEE_COLLECTOR=
CONTRACT_CREATOR_SHARE_FACTORY=
CONTRACT_OPINION_MARKET=

# Twitter API (OAuth 2.0)
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_CALLBACK_URL=https://your-cloud-run-url/api/v1/auth/twitter/callback
TWITTER_BEARER_TOKEN=

# CORS
CORS_ORIGIN=https://your-frontend-url.com
CORS_CREDENTIALS=true

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=info

# Swagger
SWAGGER_ENABLED=false
SWAGGER_TITLE=Guessly API
SWAGGER_DESCRIPTION=Guessly Prediction Market Platform API
SWAGGER_VERSION=1.0

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DESTINATION=/tmp/uploads

# Bull Queue
BULL_REDIS_HOST=REDIS_IP_ADDRESS_HERE
BULL_REDIS_PORT=6379
BULL_REDIS_DB=1

# Frontend URL
FRONTEND_URL=https://your-frontend-url.com
