# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=guessly
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=30d

# Blockchain (Base Chain)
BLOCKCHAIN_NETWORK=baseSepolia
BLOCKCHAIN_RPC_URL=https://sepolia.base.org
BLOCKCHAIN_CHAIN_ID=84532
BLOCKCHAIN_PROVIDER_PRIVATE_KEY=

# Smart Contract Addresses (Base Sepolia)
# Deployed: 2025-11-16 with Virtual Liquidity Bootstrapping
CONTRACT_USDC=0x036CbD53842c5426634e7929541eC2318f3dCF7e
CONTRACT_FEE_COLLECTOR=0x9E0e83E0569d42a3A0420F68fe4D967F4C10F423
CONTRACT_CREATOR_SHARE_FACTORY=0xaE86eC369E33A74769Ef7A1609b76E84B417c5Db
CONTRACT_OPINION_MARKET=0x9cC5bBBceb80bE28f9be3F7dd69dC815Ba64099C

# Twitter API (OAuth 2.0)
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_CALLBACK_URL=http://localhost:3000/api/v1/auth/twitter/callback
TWITTER_BEARER_TOKEN=

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
FRONTEND_URL=http://localhost:3001
ADMIN_DASHBOARD_URL=

# Rate Limiting & Security
THROTTLE_TTL=60
THROTTLE_LIMIT=100
RATE_LIMIT_WHITELIST_IPS=127.0.0.1,::1

# Security Headers (Content Security Policy)
CSP_ENABLED=true

# Logging
LOG_LEVEL=debug
LOG_TO_CONSOLE=true
LOG_TO_FILE=false
LOG_QUERIES=false

# Error Tracking & Monitoring
# Sentry (https://sentry.io)
SENTRY_DSN=
SENTRY_ENABLED=true
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_DEBUG=false
APP_VERSION=0.1.0

# Performance Monitoring
SLOW_ENDPOINT_THRESHOLD_MS=1000

# Swagger
SWAGGER_ENABLED=true
SWAGGER_TITLE=Guessly API
SWAGGER_DESCRIPTION=Guessly Prediction Market Platform API
SWAGGER_VERSION=1.0

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DESTINATION=./uploads

# Bull Queue
BULL_REDIS_HOST=localhost
BULL_REDIS_PORT=6379
BULL_REDIS_DB=1

# Admin Dashboard (for /admin/queues Bull Board)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-strong-password-in-production

# Frontend URL
FRONTEND_URL=http://localhost:3001

# Notifications
# SendGrid (for email notifications)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=no-reply@guesslyfe.com

# Firebase Cloud Messaging (for push notifications - optional)
FCM_SERVER_KEY=

# Alert Webhook (for admin notifications)
ALERT_WEBHOOK_URL=http://localhost:3000/alerts
